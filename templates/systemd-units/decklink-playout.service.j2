[Unit]
Description = voctomix {{ item[0] }}-to-{{ item[1] }} playout
After = voctocore.service
Requires = voctocore.service

[Service]
Type = simple
ExecStart = /opt/voctomix/scripts/{{ item[0] }}-to-{{ item[1] | lower | replace(' ', '-') | replace('(', '') | replace(')', '') }}-playout.sh
Restart = always
RestartSec = 1s
StartLimitInterval = 0

[Install]
WantedBy = voctocore.service
